<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_link_to portfolio_img(portfolio_item.thumb_image, 'thumb'),  portfolio_show_path(portfolio_item), width: "100%" %>
    <div class="card-body">
      <p class="card-text text-center">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <br />
         <%= portfolio_item.subtitle %>
      </p>
    </div>
  </div>
</div>
